<h1 class="text-center">My Portfolio</h1>


<div class="search-bar">
  <h2>Serach Stock</h2>
  <%= form_tag search_stock_path, remote: true, method: :get do%>
    <div class="form-group row">
      <div class="col-sm-9">
        <%= text_field_tag :stock, params[:stock], class: 'form-control', placeholder: 'Enter the Company Symbol' %>
      </div>
      <div class="col-sm-3">
        <%= button_tag type: :submit, class: 'btn btn-success' do%>
        <%= fa_icon 'search'%>
        <%end%>
      </div>
    </div>
  <%end%>

</div>

<div id="result">

</div>
<%unless @stocks.empty?%>
  <%= render 'stock_information' %>
<%end%>
